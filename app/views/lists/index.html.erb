<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="#">
    <img src="https://img.freepik.com/premium-vector/popcorn-icon-illustration-isolated_385450-88.jpg?w=826" alt="icone-popcorn">
  </a>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn1.vectorstock.com/i/1000x1000/88/30/cinema-film-strips-blue-background-poster-design-vector-29218830.jpg);">
  <div class="container">
    <h1>The best movies for you</h1>
    <p>Create a list for each mood</p>
    <a> <%= link_to 'New list', new_list_path, class:"btn btn-outline-light" %> </a>
  </div>
</div>

<div class="container body-list">
  <h1>My lists</h1>
  <p><% @lists.each do |list| %></p>
  <div class="cards list-group-item">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()" >
      <%= link_to list.name, list_path(list) %>
    </div>
  </div>
  <% end %>
</div>


